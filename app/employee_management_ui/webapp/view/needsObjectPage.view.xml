<mvc:View controllerName="sap.deloitte.employeemanagement.employeemanagementui.controller.needsObjectPage"
xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:info="sap.deloitte.employeemanagement.employeemanagementui.controller.sharedBlocks"
	xmlns:employment="sap.uxap.sample.SharedBlocks.employment"
	height="100%">

	<ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Sales Manager" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiSmallMarginEnd" />
						</m:VBox>

						<m:VBox>
							<m:Title text="Object Page Header with Header Container" wrapping="true"/>
							<m:Label text="June 06, 2024"/>
						</m:VBox>
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="June 06, 2024"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="June 06, 2024"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button text="Edit" type="Emphasized"/>
					<m:Button text="Delete"/>
					<m:Button text="Copy"/>
					<m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>

			<m:HeaderContainer id="headerContainer" scrollStep="200" showDividers="false">
				<m:HBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
					<m:VBox class="sapUiSmallMarginBottom">
						<m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
							<m:Label text="Job Family:" class="sapUiTinyMarginEnd"/>
							<m:Text text=" Sales and Marketing"/>
						</m:HBox>

						<m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
							<m:Label text="Country:" class="sapUiTinyMarginEnd"/>
							<m:Text text="USA"/>
						</m:HBox>

						<m:HBox>
							<m:Label text="CL Range:" class="sapUiTinyMarginEnd"/>
							<m:Text text="23455"/>
						</m:HBox>
					</m:VBox>
				</m:HBox>

				<m:VBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
					<m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="Sub Function:" class="sapUiSmallMarginEnd"/>
						<m:Text text="Reasearch and Engineering - Projects"/>
					</m:HBox>

					<m:HBox class="sapUiTinyMarginBottom" renderType="Bare">
						<m:Label text="Department:" class="sapUiSmallMarginEnd"/>
						<m:Text text=" Research and Engineering - Regional Projects"/>
					</m:HBox>

					<m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="Contact:" class="sapUiSmallMarginEnd"/>
						<m:Text text="John Miller"/>
					</m:HBox>
				</m:VBox>
			</m:HeaderContainer>
		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="Candidates" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:Candidates />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
			   <ObjectPageSection titleUppercase="false" title="Overview" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:Compare />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Compare" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:Overview />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Checklist" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:Checklist />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Discussion" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:Discussion />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Status History" >
                    <subSections>
                        <ObjectPageSubSection >
                            <blocks>
                                <info:statusHistory />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
		</sections>
    </ObjectPageLayout>    
</mvc:View>    