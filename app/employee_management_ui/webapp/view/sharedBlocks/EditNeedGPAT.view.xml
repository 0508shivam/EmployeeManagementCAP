<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChangeColumn_oneGroup"
			editable="true"
			layout="ColumnLayout" >
			<f:content>
				<Label text="Return from Leave" />
					<Switch state="false" customTextOn="Yes" customTextOff="No">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Switch>
				<Label text="Executive Move" />
				<Switch state="false" customTextOn="Yes" customTextOff="No">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Switch>
			</f:content>
		</f:SimpleForm>
	</VBox>
</mvc:View>