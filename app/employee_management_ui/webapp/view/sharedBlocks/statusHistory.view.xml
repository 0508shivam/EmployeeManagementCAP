<mvc:View xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.suite.ui.commons"
    xmlns:forms="sap.ui.layout.form">
    <Timeline
			id="idTimeline"
			enableDoubleSided="true"
			groupBy="HireDate"
			growingThreshold="0"
			filterTitle="Name"
			sortOldestFirst="true"
            enableScroll="false"
			content="{/Employees}">
		<content>
			<TimelineItem
					id="idTemplateItem"
					dateTime="{HireDate}"
					text="{JobResponsibilities}"
                    userNameClickable="true"
					userName="{Name}"
					filterValue="{Name}"
					icon="{Icon}">
			</TimelineItem>
		</content>
	</Timeline>
</mvc:View>